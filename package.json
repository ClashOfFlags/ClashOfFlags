  "scripts": {
    "setup": "sudo npm install -g pm2 bower gulp webpack && npm install && bower install && cp .env.example .env",
    "build": "concurrently 'gulp' 'webpack'",
    "watch": "concurrently --kill-others 'gulp watch' 'webpack --watch'",
